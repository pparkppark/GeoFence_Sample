<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/title_storegroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="enable_storegroup"
            android:text="Store Group"
            android:textColor="#1B5E91" />

        <Button
            android:id="@+id/getstoregrouplist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_storegrouplist"
            android:text="2.1 Get storegroup List" />

        <Button
            android:id="@+id/addstoregroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="add_storegroup"
            android:text="2.2 ADD storegroup" />

        <Button
            android:id="@+id/getstoregroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_storegroup"
            android:text="2.3 GET storegroup" />

        <Button
            android:id="@+id/updatestoregroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="update_storegroup"
            android:text="2.4 UPDATE storegroup" />

        <Button
            android:id="@+id/deletestoregroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="delete_storegroup"
            android:text="2.5 DELETE storegroup" />

        <Button
            android:id="@+id/title_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="enable_store"
            android:text="Store "
            android:textColor="#1B5E91" />

        <Button
            android:id="@+id/getstorelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_all_store"
            android:text="3.1 Get store List" />

        <Button
            android:id="@+id/addstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="add_store"
            android:text="3.2 ADD store" />

        <EditText
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="위도를 넣으세요 (넣지 않으면 설정된 주소로 입력됩니다.)" />

        <EditText
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="경도를 넣으세요(넣지 않으면 설정된 주소로 입력됩니다.)" />

        <Button
            android:id="@+id/getstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_store"
            android:text="3.3 GET store" />

        <Button
            android:id="@+id/updatestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="update_store"
            android:text="3.4 UPDATE store" />

        <Button
            android:id="@+id/deletestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="delete_store"
            android:text="3.5 DELETE store" />

        <Button
            android:id="@+id/title_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="enable_event"
            android:text="Event "
            android:textColor="#1B5E91" />

        <Button
            android:id="@+id/geteventlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_all_event"
            android:text="4.1 get event List" />

        <Button
            android:id="@+id/addevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="add_event"
            android:text="4.2 ADD event" />

        <Button
            android:id="@+id/getevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_event"
            android:text="4.3 GET event" />

        <Button
            android:id="@+id/updateevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="update_event"
            android:text="4.4 UPDATE event" />

        <Button
            android:id="@+id/deleteevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="delete_event"
            android:text="4.5 DELETE event" />

        <Button
            android:id="@+id/title_storegroupmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="enable_storegroupmap"
            android:text="Store Group Map"
            android:textColor="#1B5E91" />

        <Button
            android:id="@+id/addstoregroupmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="set_storegroupmap"
            android:text="1.1 add storegroupmap" />

        <Button
            android:id="@+id/updatestoregroupmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="update_storegroupmap"
            android:text="1.2 update storegroupmap" />

        <Button
            android:id="@+id/deletestoregroupmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="delete_storegroupmap"
            android:text="1.3 Del storegroupmap" />

        <Button
            android:id="@+id/title_eventstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="enable_eventstore"
            android:text="EventStore"
            android:textColor="#1B5E91" />

        <Button
            android:id="@+id/addeventstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="add_eventstore"
            android:text="5.1 ADD eventstore" />

        <Button
            android:id="@+id/updateeventstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="update_eventstore"
            android:text="5.2 UPDATE eventstore" />

        <Button
            android:id="@+id/deleteeventstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="delete_eventstore"
            android:text="5.3 DELETE eventstore" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_with_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <Button
                android:id="@+id/sync_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="syncdb"
                android:text="Sync4App" />

            <Button
                android:id="@+id/app_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="appsync"
                android:text="AppSync" />

            <Button
                android:id="@+id/set_accuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="set_accuracy"
                android:text="측위 정확도 선택" />

            <Button
                android:id="@+id/check_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="check_state_sample"
                android:text="설정 확인" />

            <TextView
                android:id="@+id/warning_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/event_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF2222" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>